<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

<ImageView
    android:layout_width="88dp"
    android:src="@drawable/ic_launcher_background"
    android:id="@+id/index_item_tow_iv"
    android:layout_height="108dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<TextView
    android:layout_width="85dp"
    android:text="离天空这么近"
    android:textColor="#fff"
    android:layout_marginTop="5dp"
    android:id="@+id/index_item_tow_name"
    android:layout_height="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="04月25日上映"
        android:textColor="#fff"
        android:id="@+id/index_item_tow_data"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="1134人想看"
            android:textColor="#fff"
            android:id="@+id/index_item_tow_like"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:text="预约"
                android:id="@+id/index_item_tow_but"
                android:layout_alignParentRight="true"
                android:layout_marginRight="34dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>