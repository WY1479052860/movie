<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202549"
    tools:context=".activity.CinemaInfoActivity">
    <TextView
        android:layout_marginTop="38dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_width="64dp"
        android:textColor="@android:color/white"
        android:text="影院详情"
        android:textSize="16sp"
        android:layout_height="22dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_name"
               android:layout_marginTop="20dp"
               android:layout_width="182dp"
               android:text="保利国际影城"
               android:layout_marginRight="154dp"
               android:layout_marginLeft="24dp"
               android:textColor="@android:color/white"
               android:textSize="14sp"
               android:layout_height="20dp"/>
           <ImageView
               android:layout_marginTop="20dp"
               android:id="@+id/iv"
               android:layout_width="20dp"
               android:src="@mipmap/aix"
               android:layout_height="18dp"/>
       </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_info"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="176dp"
            android:text="3D眼镜"
            android:background="#d3af56"
            android:textColor="@android:color/white"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:src="@mipmap/group_10"
            android:layout_marginLeft="80dp"
            android:layout_width="13dp"
            android:layout_height="16dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:text="到这里去"
            android:textColor="@android:color/white"
            android:layout_height="17dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.google.android.material.tabs.TabLayout
            android:layout_gravity="center"
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:background="#1c2243"
            app:tabTextColor="@android:color/white"
            android:layout_height="38dp">
        </com.google.android.material.tabs.TabLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        </androidx.viewpager.widget.ViewPager>
        <Button
            android:layout_marginTop="50dp"
            android:id="@+id/bt_cinema"
            android:text="查看该影院电影的排期"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:background="#e8185e"
            android:layout_height="40dp">
        </Button>
    </LinearLayout>






</LinearLayout>