<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/bjt"
        android:scaleType="center"
        android:layout_height="wrap_content">
    </ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#141931"
        android:layout_height="match_parent">
        <EditText
            android:paddingLeft="20dp"
            android:id="@+id/et_name"
            android:textColor="@android:color/white"
            android:background="@drawable/yuan"
            android:layout_marginLeft="50dp"
            android:layout_width="312dp"
            android:hint="请输入邮箱账号"
            android:textColorHint="@android:color/white"
            android:layout_height="44dp">
        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:paddingLeft="20dp"
                android:id="@+id/et_pwd"
                android:password="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/yuan"
                android:layout_marginLeft="50dp"
                android:textColor="@android:color/white"
                android:layout_width="312dp"
                android:hint="请输入密码"
                android:textColorHint="@android:color/white"
                android:layout_height="44dp">
            </EditText>
            <Button
                android:id="@+id/Captcha"
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_bt_wxdl"
                android:text="忘记密码" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_login"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="252dp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:text="暂无账号 立即注册"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bt_login"
            android:layout_marginTop="12dp"
            android:background="@drawable/zc"
            android:layout_marginLeft="50dp"
            android:layout_width="312dp"
            android:text="登录"
            android:textColor="@android:color/white"
            android:layout_height="44dp"/>
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <View
                 android:layout_marginTop="30dp"
                 android:layout_marginLeft="73dp"
                 android:layout_width="93dp"
                 android:background="@android:color/white"
                 android:layout_height="3dp"/>
             <TextView
                 android:layout_marginLeft="20dp"
                 android:layout_marginTop="20dp"
                 android:layout_width="14dp"
                 android:text="或"
                 android:textColor="@android:color/white"
                 android:layout_height="20dp"/>
             <View
                 android:layout_marginTop="30dp"
                 android:layout_marginLeft="20dp"
                 android:layout_width="93dp"
                 android:background="@android:color/white"
                 android:layout_height="3dp"/>
         </LinearLayout>
        <ImageButton
            android:id="@+id/bt_wx"
            android:layout_marginTop="12dp"
            android:background="@drawable/dl"
            android:layout_marginLeft="50dp"
            android:layout_width="312dp"
            android:src="@mipmap/wx"
            android:textColor="@android:color/white"
            android:layout_height="55dp"/>
    </LinearLayout>

</LinearLayout>