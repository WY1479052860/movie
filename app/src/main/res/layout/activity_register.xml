<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/bjt"
        android:scaleType="center"
        android:layout_height="wrap_content">
    </ImageView>
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/et_name"
        android:background="@drawable/yuan"
        android:layout_marginLeft="50dp"
        android:layout_width="312dp"
        android:hint="     请输入昵称"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_height="44dp">
    </EditText>
    <EditText
        android:id="@+id/et_email"
        android:layout_marginTop="12dp"
        android:background="@drawable/yuan"
        android:layout_marginLeft="50dp"
        android:textColor="@android:color/white"
        android:layout_width="312dp"
        android:hint="     请输入邮箱账号"
        android:textColorHint="@android:color/white"
        android:layout_height="44dp">
    </EditText>
    <EditText
        android:id="@+id/register_pwd"
        android:layout_marginTop="12dp"
        android:background="@drawable/yuan"
        android:textColor="@android:color/white"
        android:layout_marginLeft="50dp"
        android:layout_width="312dp"
        android:hint="     请设置密码"
        android:textColorHint="@android:color/white"
        android:layout_height="44dp">
    </EditText>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <EditText
           android:id="@+id/et_captcha"
           android:layout_marginTop="12dp"
           android:background="@drawable/yuan"
           android:layout_marginLeft="50dp"
           android:layout_width="312dp"
           android:hint="     请输入验证码"
           android:textColor="@android:color/white"
           android:textColorHint="@android:color/white"
           android:layout_height="44dp"/>
       <Button
           android:id="@+id/Captcha"
           android:layout_width="96dp"
           android:layout_height="44dp"
           android:layout_marginLeft="240dp"
           android:layout_marginTop="10dp"
           android:background="@drawable/login_bt_wxdl"
           android:text="获取验证码" />
   </RelativeLayout>
    <TextView
        android:id="@+id/tv_zhu"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="252dp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:text="已有账号 立即登录"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/bt_register"
        android:layout_marginTop="12dp"
        android:background="@drawable/zc"
        android:layout_marginLeft="50dp"
        android:layout_width="312dp"
        android:text="注册"
        android:textColor="@android:color/white"
        android:layout_height="44dp">
    </Button>
</LinearLayout>
</LinearLayout>